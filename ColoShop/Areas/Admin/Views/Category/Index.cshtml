@model IEnumerable<ColoShop.Models.Category>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_layout.cshtml";
}

@section navigateHeader {
    <!-- Left navbar links -->
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin" class="nav-link">Home</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="#" class="nav-link">Category</a>
        </li>
    </ul>
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Category list</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="/admin/">Home</a></li>
                    <li class="breadcrumb-item active">Category</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">

    <!-- Default box -->
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Category list</h3>

            <div class="card-tools">
                @*<button type="button" class="btn btn-tool" data-card-widget="collapse" title="Collapse">
                    <i class="fas fa-minus"></i>
                </button>
                <button type="button" class="btn btn-tool" data-card-widget="remove" title="Remove">
                    <i class="fas fa-times"></i>
                </button>*@
                <a href="/admin/category/add" class="btn btn-primary">Add new</a>
            </div>
        </div>
        <div class="card-body">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>STT</th>
                        <th>Category Name</th>
                        <th>Order</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                @if(Model != null && Model.Any())
                    {
                        var i = 1;
                        foreach(var item in Model)
                        {
                            <tr id="drow-@item.Id">
                                <td>@i</td>
                                <td>@item.Name</td>
                                <td>@item.Position</td>
                                <td>
                                    <a href="/admin/category/edit/@item.Id" class="btn btn-primary">Edit</a>
                                    <a href="#" data-id="@item.Id" class="btn btn-danger btnDelete">Delete</a>
                                </td>
                            </tr>
                            i++;
                        }
                    }
                    else
                    {
                        <tr>
                            <td rowspan="4">No data found</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <!-- /.card-body -->
        <div class="card-footer">
            
        </div>
        <!-- /.card-footer-->
    </div>
    <!-- /.card -->

</section>
<!-- /.content -->

@section scripts {
    <script>
        $(document).ready(function () {
            $('.btnDelete').on('click', (e) => {
                const id = $(e.target).data('id');
                const confirmDelete = confirm(`Are you sure you want to delete Category id: ${id}`);
                if (confirmDelete) {
                    $.ajax({
                        url: '/admin/category/delete',
                        method: "DELETE",
                        data: {id},
                        success: (res) => {
                            if (res.success) {
                                $(`#drow-${id}`).remove()
                            }
                            else {
                                alert("An error occur!")
                            }
                        }
                    })
                }
            })
        });

    </script>
}

