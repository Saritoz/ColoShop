@model ColoShop.Models.Product
@{
    ViewData["Title"] = "Edit Product";
    Layout = "~/Areas/Admin/Views/Shared/_layout.cshtml";
}

@section navigateHeader {
    <!-- Left navbar links -->
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin" class="nav-link">Home</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin/products" class="nav-link">Products</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="#" class="nav-link">Edit Product</a>
        </li>
    </ul>
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Add post</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="/admin">Home</a></li>
                    <li class="breadcrumb-item"><a href="/admin/products">Products</a></li>
                    <li class="breadcrumb-item active">Edit</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">

    <!-- Default box -->
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">News add</h3>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-6 col-md-12">
                    <form method="post" action="/admin/products/edit">
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true)
                        @Html.HiddenFor(x => x.Id)

                        <div class="card">
                            <div class="card-header p-2">
                                <ul class="nav nav-pills">
                                    <li class="nav-item"><a class="nav-link active" href="#activity" data-toggle="tab">General</a></li>
                                    <li class="nav-item"><a class="nav-link" href="#timeline" data-toggle="tab">Images</a></li>
                                    <li class="nav-item"><a class="nav-link" href="#settings" data-toggle="tab">Others</a></li>
                                </ul>
                            </div><!-- /.card-header -->
                            <div class="card-body">
                                <div class="tab-content">
                                    <div class="active tab-pane" id="activity">
                                        <div class="form-group">
                                            <label for="title">Name</label>
                                            @Html.TextBoxFor(x => x.Name, new {@class="form-control", @placeholder="name", @autocomplete="off", @id="title"})
                                            @Html.ValidationMessageFor(x => x.Name, null, new {@class="text-danger"})
                                        </div>
                                        <div class="form-group">
                                            <label for="productcode">ProductCode</label>
                                            @Html.TextBoxFor(x => x.ProductionCode, new {@class="form-control", @placeholder="product code", @autocomplete="off", @id="productcode"})
                                        </div>
                                        <div class="form-group">
                                            <label for="category">Product Category</label>
                                            @Html.DropDownListFor(x => x.IdCategoryProduct, ViewBag.ProductCategory as SelectList , "-Select Category-", new {@class="form-control", @id="category"})
                                        </div>
                                        <div class="form-group">
                                            <label for="description">Description</label>
                                            @Html.TextAreaFor(x => x.Description, new {@class="form-control", @placeholder="description here", @autocomplete="off", @id="description"})
                                        </div>
                                        <div class="form-group">
                                            <label for="detail">Detail</label>
                                            @Html.TextAreaFor(x => x.Detail, new {@class="form-control", @placeholder="detail here", @autocomplete="off", @id="detail"})
                                        </div>
                                        <div class="row">
                                            <div class="col-4">
                                                <div class="form-group">
                                                    <label for="amount">Amount</label>
                                                    @Html.TextBoxFor(x => x.Quantity, new {@class="form-control", @placeholder="amount", @autocomplete="off", @id="amount"})
                                                </div>
                                            </div>
                                            <div class="col-4">
                                                <div class="form-group">
                                                    <label for="price">Price</label>
                                                    @Html.TextBoxFor(x => x.Price, new {@class="form-control", @placeholder="price", @autocomplete="off", @id="price"})
                                                </div>
                                            </div>
                                            <div class="col-4">
                                                <div class="form-group">
                                                    <label for="pricesale">PriceSale</label>
                                                    @Html.TextBoxFor(x => x.PriceSale, new {@class="form-control", @placeholder="price sale", @autocomplete="off", @id="pricesale"})
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-3">
                                                <div class="form-group">
                                                    <div class="custom-control custom-checkbox">
                                                        @Html.CheckBoxFor(x => x.IsActive, new {@class="custom-control-input", @id="active", @checked="checked"})
                                                        <label for="active" class="custom-control-label">Active</label>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-3">
                                                <div class="form-group">
                                                    <div class="custom-control custom-checkbox">
                                                        @Html.CheckBoxFor(x => x.IsHot, new {@class="custom-control-input", @id="hot"})
                                                        <label for="hot" class="custom-control-label">Hot</label>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-3">
                                                <div class="form-group">
                                                    <div class="custom-control custom-checkbox">
                                                        @Html.CheckBoxFor(x => x.IsFeature, new {@class="custom-control-input", @id="feature"})
                                                        <label for="feature" class="custom-control-label">Feature</label>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-3">
                                                <div class="form-group">
                                                    <div class="custom-control custom-checkbox">
                                                        @Html.CheckBoxFor(x => x.IsSale, new {@class="custom-control-input", @id="sale"})
                                                        <label for="sale" class="custom-control-label">Sale</label>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <!-- /.tab-pane -->
                                    <div class="tab-pane" id="timeline">
                                        <!-- The timeline -->
                                        <div class="row">
                                            <div class="col-12">
                                                <div class="form-group">
                                                    
                                                    <button type="button" class="btn btn-default" data-toggle="modal" data-target="#modal-default" id="btnBrowser">
                                                        Choose
                                                    </button>
                                                </div>
                                            </div>
                                            <div class="col-12">Preview</div>
                                            <div class="col-12">
                                                <table class="table table-hover" id="tbImage">
                                                    <thead>
                                                        <tr>
                                                            <th>#</th>
                                                            <th>Image</th>
                                                            <th>Set Avatar</th>
                                                            <th></th>
                                                        </tr>
                                                    </thead>
                                                    <tbody id="tbData">
                                                        <tr>
                                                        </tr>
                                                    </tbody>
                                                </table>

                                                @Html.TextBoxFor(x => x.Image, new {@id="imageUrl", @autocomplete="off", @type="hidden"})
                                                @Html.CheckBoxFor(x => x.IsHome, new {@type="hidden"})

                                            </div>
                                        </div>

                                    </div>
                                    <!-- /.tab-pane -->

                                    <div class="tab-pane" id="settings">
                                        
                                    </div>
                                    <!-- /.tab-pane -->
                                </div>
                                <div>
                                    <button type="submit" class="btn btn-primary">Save</button>
                                </div>
                                <!-- /.tab-content -->
                            </div><!-- /.card-body -->
                        </div>
                    </form>
                </div>

            </div>
        </div>
        <!-- /.card-body -->
        <div class="card-footer">
        </div>
        <!-- /.card-footer-->
    </div>
    <!-- /.card -->
    <div class="modal fade" id="modal-default">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title">All Images</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div>
                        <form id="uploadForm" enctype="multipart/form-data">
                            <div class="input-group">
                                <div class="custom-file">
                                    <input type="file" class="custom-file-input" id="exampleInputFile" name="upload" accept="image/*">
                                    <label class="custom-file-label" for="exampleInputFile">Choose file</label>
                                </div>
                                <div class="input-group-append">
                                    <button type="button" class="btn btn-default" id="btnUpload">Upload</button>
                                </div>
                            </div>
                        </form>
                        <p id="messageUpload"></p>
                    </div>
                    <div id="imageGallery" style="height:500px" class="overflow-auto">
                    </div>
                </div>
                <div class="modal-footer justify-content-between">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                </div>
            </div>
            <!-- /.modal-content -->
        </div>
        <!-- /.modal-dialog -->
    </div>
</section>
<!-- /.content -->
@section scripts {
    <script src="~/ckeditor/ckeditor.js"></script>

    <script>
        const editor = CKEDITOR
            .replace("detail", {
                filebrowserUploadUrl: '/admin/upload/UploadImg',
                filebrowserBrowseUrl: '/admin/upload/UploadExplorer',
            })

        $(document).ready(function () {
            $('body').on('click', '#btnBrowser', function () {
                const message = $('#messageUpload');
                message.text('');
                $.ajax({
                    url: '/admin/upload/getImagesName',
                    method: "GET",
                    success: (res) => {
                        const imageGallery = $('#imageGallery');
                        imageGallery.empty();

                        res.data.forEach(function (name) {
                            const imageUrl = `/uploads/images/${name}`;
                            const imgElement = $('<img>').attr('src', imageUrl).addClass('img-fluid').attr('alt', 'Uploaded Image').attr('data-bs-dismiss', 'modal').attr('width', '100');
                            const buttonElement = $('<button>').addClass('btn btn-default btnSelectImage').attr('type', 'button').data('url', imageUrl).text('choose');
                            const divElement = $('<div>').addClass('my-3').append(imgElement, buttonElement);
                            imageGallery.append(divElement);
                        });
                    }
                })
            })

            $('body').on('click', '.btnSelectImage', function () {
                const url = $(this).data('url')
                $('#imageUrl').val((i, currentValue) => currentValue + `${url};`)
                alert('Selected')
                $('#tbData').empty()
                $('#imageUrl').val().split(';').forEach((image, index) => {
                    if (image !== "") {
                        const newRow = `<tr id='row-${index}'>
                                            <td>${index}</td>
                                            <td><img src='${image}' width='100'/></td>
                                            <td><input type='radio' value=${index} name='Avatar' ${index == 0 ? 'checked' : ''}/></td>
                                            <td><button type='button' class='btn btn-danger btnRemoveImg' data-row='${index}' data-url='${image}'>Remove</button></td>
                                        </tr>`;
                        $('#tbData').append(newRow);
                    }
                });

            })

            $('body').on('click', '.btnRemoveImg', function () {
                const url = $(this).data('url')
                const index = $(this).data('row')
                $('#imageUrl').val((i, currentValue) => currentValue.replace(`${url};`, ''))
                $(`#row-${index}`).remove()
            })

            $('body').on('click', '#btnUpload', function () {
                const form = $('#uploadForm')[0]
                const formData = new FormData(form)

                $.ajax({
                    url: '/admin/upload/UploadImg',
                    method: 'POST',
                    data: formData,
                    processData: false,
                    contentType: false,
                    success: (res) => {
                        if (res.success) {
                            $('#messageUpload').text('upload success, re-open this modal');
                        }
                        else {
                            $('#messageUpload').text('upload failed');
                        }
                    }
                })
            })

            if ($('#imageUrl').val() != "") {
                $('#tbData').empty()
                $('#imageUrl').val().split(';').forEach((image, index) => {
                    if (image !== "") {
                        const newRow = `<tr id='row-${index}'>
                                            <td>${index}</td>
                                            <td><img src='${image}' width='100'/></td>
                                            <td><input type='radio' value=${index} name='Avatar' ${index == 0 ? 'checked' : ''} /></td>
                                            <td><button type='button' class='btn btn-danger btnRemoveImg' data-row='${index}' data-url='${image}'>Remove</button></td>
                                        </tr>`;
                        $('#tbData').append(newRow);
                    }
                });
            }
        })
    </script>

}

